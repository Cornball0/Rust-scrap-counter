<h2>Selected Items</h2>
<ul id="selectedItems"></ul>

<div id="totalScrap">Total Scrap: 0</div>

<button class="resetButton" onclick="resetCalculator()">Reset</button>

<script>
  const selectedItemsList = document.getElementById('selectedItems');
  const totalScrapDisplay = document.getElementById('totalScrap');
  let totalScrap = 0;

  function selectItem(button) {
    const row = button.parentNode.parentNode;
    const itemName = row.firstChild.textContent;
    const scrapAmount = parseInt(row.children[1].getAttribute('data-scrap'));

    // Display selected items
    const selectedItem = document.createElement('li');
    selectedItem.textContent = `${itemName} - ${scrapAmount} Scrap`;
    selectedItemsList.appendChild(selectedItem);

    // Update total scrap display
    totalScrap += scrapAmount;
    totalScrapDisplay.textContent = `Total Scrap: ${totalScrap}`;
  }

  function resetCalculator() {
    // Clear selected items
    selectedItemsList.innerHTML = '';

    // Reset total scrap
    totalScrap = 0;
    totalScrapDisplay.textContent = `Total Scrap: ${totalScrap}`;
  }
</script>

